# API Configuration
NODE_ENV=development
PORT=3001

# Database (Local Development)
# Use 'localhost' when running API locally
# Docker compose will override this with 'mongo' hostname
MONGO_URI=mongodb://admin:password@localhost:27017/chat?authSource=admin

# Security
# Generate a secure random string (min 32 characters)
# You can use: openssl rand -base64 32
JWT_SECRET=your_secret_key_min_32_characters_long_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS
# Allow requests from frontend
CORS_ORIGIN=http://localhost:3000
